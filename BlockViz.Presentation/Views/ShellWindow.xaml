<r:RibbonWindow x:Class="BlockViz.Presentation.Views.ShellWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:r="clr-namespace:Fluent;assembly=Fluent"
                xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
                Title="BlockViz 1.0.0"
                Height="600" Width="1000"
                WindowState="Maximized">

    <DockPanel>

        <ContentPresenter DockPanel.Dock="Top"
                      Content="{Binding ContentRibbonView}" />

        <xcad:DockingManager>
            <xcad:LayoutRoot>
                <xcad:LayoutPanel Orientation="Vertical">

                    <xcad:LayoutPanel Orientation="Horizontal">

                        <xcad:LayoutAnchorablePane DockWidth="200">
                            <xcad:LayoutAnchorable Title="Navigator">
                                <ContentPresenter Content="{Binding ContentTreeView}" />
                            </xcad:LayoutAnchorable>
                        </xcad:LayoutAnchorablePane>

                        <xcad:LayoutDocumentPane>
                            <xcad:LayoutDocument Title="Factory Visualization">
                                <ContentPresenter Content="{Binding ContentFactoryView}" />
                            </xcad:LayoutDocument>
                            <xcad:LayoutDocument Title="Schedule View">
                                <ContentPresenter Content="{Binding ContentScheduleView}" />
                            </xcad:LayoutDocument>
                        </xcad:LayoutDocumentPane>

                        <xcad:LayoutAnchorablePane DockWidth="400">
                            <xcad:LayoutAnchorable Title="Pi View">
                                <ContentPresenter Content="{Binding ContentPiView}" />
                            </xcad:LayoutAnchorable>
                        </xcad:LayoutAnchorablePane>

                    </xcad:LayoutPanel>

                    <xcad:LayoutAnchorablePane DockHeight="240">
                        <xcad:LayoutAnchorable Title="공장 가동 일정">
                            <ContentPresenter Content="{Binding ContentGanttView}" />
                        </xcad:LayoutAnchorable>
                    </xcad:LayoutAnchorablePane>

                </xcad:LayoutPanel>
            </xcad:LayoutRoot>
        </xcad:DockingManager>

    </DockPanel>
</r:RibbonWindow>
