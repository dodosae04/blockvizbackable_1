<UserControl x:Class="BlockViz.Presentation.Views.ScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:h="http://helixtoolkit.org/wpf"
             xmlns:wpf="http://helix-toolkit.org/wpf">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="dateText"
                   Margin="6,4"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="Black"
                   Text="0000-00-00"/>

        <wpf:HelixViewport3D x:Name="viewport"
                           Grid.Row="1"
                           ShowCoordinateSystem="True"
                           ShowViewCube="False"
                           ZoomExtentsWhenLoaded="False"
                           MouseLeftButtonDown="OnViewportMouseLeftButtonDown">

            <wpf:HelixViewport3D.Camera>
                <PerspectiveCamera Position="15,20,30"
                                   LookDirection="0,-1,-1"
                                   UpDirection="0,0,-1"
                                   FieldOfView="40"/>
            </wpf:HelixViewport3D.Camera>

            <wpf:DefaultLights/>
           
            <ModelVisual3D x:Name="SceneRoot"/>
        </wpf:HelixViewport3D>
    </Grid>
</UserControl>