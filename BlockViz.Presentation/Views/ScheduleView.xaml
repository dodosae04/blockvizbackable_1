<UserControl x:Class="BlockViz.Presentation.Views.ScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:h="http://helixtoolkit.org/wpf"
             xmlns:wpf="http://helix-toolkit.org/wpf">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="dateText"
                   Margin="6,4"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Foreground="Black"
                   Text="0000-00-00"/>

        <wpf:HelixViewport3D x:Name="viewport"
                           Grid.Row="1"
                           ShowCoordinateSystem="True"
                           ShowViewCube="False"
                           ZoomExtentsWhenLoaded="False"
                           IsPanEnabled="False"
                           IsZoomEnabled="False"
                           MouseLeftButtonDown="OnViewportMouseLeftButtonDown">

            <wpf:HelixViewport3D.Camera>
                <PerspectiveCamera Position="15,20,30"
                                   LookDirection="0,-1,-1"
                                   UpDirection="0,0,-1"
                                   FieldOfView="40"/>
            </wpf:HelixViewport3D.Camera>

            <wpf:DefaultLights/>

            <ModelVisual3D x:Name="SceneRoot"/>
        </wpf:HelixViewport3D>

        <Grid Grid.Row="2" Margin="12,6,12,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="startDateText"
                       VerticalAlignment="Center"
                       Margin="0,0,12,0"
                       Foreground="#334155"
                       FontSize="12"
                       Text="-"/>

            <Slider x:Name="timelineSlider"
                    Grid.Column="1"
                    Minimum="0"
                    Maximum="1"
                    TickFrequency="1"
                    IsMoveToPointEnabled="True"
                    SmallChange="1"
                    LargeChange="7"
                    IsSnapToTickEnabled="False"
                    ValueChanged="TimelineSlider_ValueChanged"/>

            <TextBlock x:Name="endDateText"
                       Grid.Column="2"
                       VerticalAlignment="Center"
                       Margin="12,0,0,0"
                       Foreground="#334155"
                       FontSize="12"
                       Text="-"/>
        </Grid>
    </Grid>
</UserControl>