<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:r="clr-namespace:Fluent;assembly=Fluent">
    <!-- 공통 마진/패딩 -->
    <Thickness x:Key="PagePadding">12</Thickness>
    <Thickness x:Key="CardPadding">10</Thickness>
    <Thickness x:Key="Gap">8</Thickness>

    <!-- 카드 컨테이너 -->
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="{StaticResource CardPadding}"/>
        <Setter Property="Margin" Value="6"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.25"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Fluent Ribbon 정리: 과도한 테두리 제거 -->
    <Style TargetType="{x:Type r:RibbonGroupBox}">
        <Setter Property="Margin" Value="0,0,8,0"/>
    </Style>
    <Style TargetType="{x:Type r:Button}">
        <Setter Property="Margin" Value="2,0,2,0"/>
    </Style>
</ResourceDictionary>