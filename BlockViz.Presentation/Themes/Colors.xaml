<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- 기본 팔레트 -->
    <Color x:Key="PrimaryColor">#FF2563EB</Color>
    <!-- indigo-600 -->
    <Color x:Key="PrimaryDark">#FF1E40AF</Color>
    <Color x:Key="Surface">#FFF7F8FA</Color>
    <Color x:Key="OnSurface">#FF0F172A</Color>
    <Color x:Key="Muted">#FF64748B</Color>
    <Color x:Key="Accent">#FF10B981</Color>
    <!-- emerald-500 -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryDark}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}" />
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="{StaticResource OnSurface}" />
    <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource Muted}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}" />
</ResourceDictionary>